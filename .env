# .env

# Django settings
DJANGO_SECRET_KEY=your-secret-key
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,*,http://localhost:5173
CSRF_TRUSTED_ORIGINS=https://optimi.collab-cloud.eu,http://localhost:8000,http://localhost:5173

# Database settings
DJANGO_DB_PATH=/app/db.sqlite3

# CORS settings
DJANGO_CORS_ALLOWED_ORIGINS=*

# Custom settings
CONNECTOR_URL =https://optimi.collab-cloud.eu/connector

DATA_UPLOAD_SERVICE_URL=http://optimi.collab-cloud.eu/incident/cyber-incidents/
DATA_SPACE_CONSUMER_SERVICE_URL=http://optimi.collab-cloud.eu/consume/
ACCESS_POLICY_GENERATOR_URL=http://127.0.0.1:8001/generator/generate-policy/

REQUESTS_VERIFY_SSL=False
DOMAIN_URL=http://localhost:8000

BROKER_URL=https://optimi.collab-cloud.eu

# Auth service (session-based) running locally on port 8001
AUTH_SERVICE_BASE_URL=http://localhost:8000
AUTH_SERVICE_PROFILE_ENDPOINT=/api/auth/me/
AUTH_SERVICE_SESSION_COOKIE=sessionid
AUTH_SERVICE_TIMEOUT=3
AUTH_SERVICE_VERIFY_SSL=False
AUTH_SERVICE_ALLOWLIST=/health,/metrics,/api/auth/profile
AUTH_SERVICE_ENFORCE=True
AUTH_SERVICE_LOGIN_PAGE=/api/auth/login-page/

# Cookie/session behavior for local cross-origin (8000 <-> 8001)
SESSION_COOKIE_SAMESITE=None
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SAMESITE=None
CSRF_COOKIE_SECURE=False

# Provider service uses a different session cookie name to avoid clobbering auth cookie
SESSION_COOKIE_NAME=provider_sessionid
